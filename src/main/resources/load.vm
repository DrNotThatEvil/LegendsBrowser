#set($title="Load World") #decorate("layoutLoading.vm")

<h3>Load World</h3>

<p>Current Path: $path</p>

<table class="table">
	#foreach($r in $roots)
	<tr>
		<td colspan="2"><a href="/load?path=$r"> <span
				class="glyphicon glyphicon-hdd" aria-hidden="true"></span> $r
		</a></td>
	</tr>
	#end 
	#if($parent)
	<tr>
		<td colspan="2"><a href="/load?path=$parent"><span
				class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>
				..</a></td>
	</tr>
	#end
	#foreach($p in $dirs)
	<tr>
		<td><a href="/load?path=$p"> <span
				class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>
				$p.fileName
		</a></td>
		<td></td>
	</tr>
	#end
	#foreach($p in $files)
	<tr>
		<td>
			<a href="/load?path=$p" class="loadable">
				<span class="glyphicon glyphicon-file" aria-hidden="true"></span> $p.fileName
			</a>
		</td>
		<td></td>
	</tr>
	#end
</table>
#end
