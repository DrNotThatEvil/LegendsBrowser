		<script>
			var map = L.map('map', {
				maxZoom : 24,
				minZoom : 2,
				crs : L.CRS.Simple
			}).setView([ 0, 0 ], 1);

			map.setMaxBounds(new L.LatLngBounds([ 0, 0 ], [ 129, 129 ]));

			var imageUrl = '/map?size=1600'
			var imageBounds = [ [ 0, 0 ], [ 129, 129 ] ];

			L.imageOverlay(imageUrl, imageBounds).addTo(map);

			function addSite(name, y, x, color) {
				x = 129-x-1;
				//y = 129-y;
				var polygon = L.polygon(
						[ [ x, y ], [ x, y + 1 ], [ x + 1, y + 1 ],
								[ x + 1, y ] ], {
							color: color,
							weight: 3
						}).addTo(map);
				
				polygon.bindPopup(name);
			}
		</script>
