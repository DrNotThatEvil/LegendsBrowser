#set($title=$entity.name) #decorate("layout.vm")

<div class="pull-right">
	<div id="map" style="width: 300px; height: 300px"></div>
	#parse("map.vm") 
</div>
<script>
		$(function() {
			#foreach($site in $entity.sites)
				addSite('$site.link', $site.x, $site.y, '#FFF');
			#end
			zoom();
		});
	</script>

<h3>$entity.name</h3>
$entity.race
<h4>Leaders</h4>
<ul>
#foreach($leader in $entity.leaders)
	<li>$leader.hf.link ($leader.position from $leader.from till $leader.till)</li>
#end
</ul>


<h4>Sites</h4>


<table>
	<tr>
		<th>Site</th>
		<th>Founded</th>
		<th>Destroyed</th>
	</tr>
	#foreach( $site in $entity.sites )
	<tr>
		<td>$site.link</td>
		<td>$site.founded</td>
		<td>$site.destroyed</td>
	</tr>
	#end
</table>

#parse("events.vm") #end
