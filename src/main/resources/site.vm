#set($title=$site.name) #decorate("layout.vm")

<h3>$site.name</h3>

<p>
	$site.type 
	#if($site.owner) of $site.owner.root.link#end
</p>

<div class="object-map" id="map" style="width: 300px; height: 300px"></div>
#parse("map.vm")
<script>
	addSite('$site.link', $site.x, $site.y, '#F0F');
</script>

<div class="object-header">
	<!-- Nav tabs -->
	<ul class="nav nav-tabs object-tab" role="tablist">
	#set($first=true)
	#if($site.structures.size()>0)
		<li role="presentation" #if($first)class="active"#end><a href="#tab-structures" role="tab" data-toggle="tab">Structures</a></li>
		#set($first=false)
	#end
	#if($site.populations.size()>0)
		<li role="presentation" #if($first)class="active"#end><a href="#tab-pop" role="tab" data-toggle="tab">Population</a></li>
		#set($first=false)
	#end
	</ul>

	<!-- Tab panes -->
	<div class="tab-content">
		#set($first=true)
 		#if($site.structures.size()>0)
		<div role="tabpanel" class="tab-pane #if($first)active#end" id="tab-structures">
			<table class="table table-hover object-table">
				<thead><tr>
					<th>Structure</th>
					<th>Type</th>
					<th>Alt. Name</th>
				</tr></thead>
				#foreach( $structure in $site.structures )
				<tr>
					<td>$structure.link</td>
					<td>$structure.type</td>
					<td>$structure.name2</td>
				</tr>
				#end
			</table>
		</div>
		#set($first=false)
		#end 
		
 		#if($site.populations.size()>0)
		<div role="tabpanel" class="tab-pane #if($first)active#end" id="tab-pop">
			<table class="table table-hover object-table">
				<thead><tr>
					<th>Count</th>
					<th width="100%">Race</th>
				</tr></thead>
				#foreach( $pop in $site.populations )
				<tr>
					<td align="right">$pop.numbers</td>
					<td>$pop.race</td>
				</tr>
				#end
			</table>
		</div>
		#set($first=false)
		#end 
	</div>
</div>

#parse("events.vm") #end
